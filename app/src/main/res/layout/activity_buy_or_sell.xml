<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".BuyOrSellActivity"
android:id="@+id/drawer_layout"
android:fitsSystemWindows="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/Theme.AppCompat.Light"
        android:elevation="4dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragmentContainer">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="364dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginTop="77dp"
                android:layout_marginEnd="24dp"
                android:text="What are you looking for today?"
                android:textAlignment="center"
                android:textColor="@color/primaryColor"
                android:textSize="32dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSellHouse"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="373dp"
                android:layout_marginEnd="31dp"
                android:background="@color/primaryColor"
                android:backgroundTint="@android:color/white"
                android:text="Sell a House"
                android:textColor="@color/primaryColor" />

            <Button
                android:id="@+id/btnBuyHouse"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="273dp"
                android:layout_marginEnd="31dp"
                android:text="Buy a House"
                android:textColor="@color/primaryColor" />
    </FrameLayout>

</LinearLayout>

<com.google.android.material.navigation.NavigationView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:id="@+id/nav_view"
    app:headerLayout="@layout/nav_header"
    app:menu="@menu/drawer_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>




